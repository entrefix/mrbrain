# Database (SQLite - simple file path)
DATABASE_PATH=./data/todomyday.db

# Vector Database & RAG Configuration
VECTOR_DB_PATH=./data/vectors
EMBEDDING_MODEL=text-embedding-3-small
RAG_ENABLED=true

# Backend
JWT_SECRET=minimum_32_character_secret_key_here_change_me
JWT_EXPIRATION=24h
ALLOWED_ORIGINS=http://localhost:3111

# Encryption key for securely storing API keys (min 32 characters)
ENCRYPTION_KEY=your_encryption_key_at_least_32_characters

# OpenAI-compatible API (fallback if no user provider configured)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-3.5-turbo

# SearXNG instances for web search (comma-separated for round-robin)
# Optional - enables web search feature in Memories
SEARXNG_URLS=http://13.203.88.215,http://13.200.122.134

# Frontend
VITE_API_URL=http://localhost:8099
